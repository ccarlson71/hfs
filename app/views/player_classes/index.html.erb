<% title "Player Classes" %>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for player_class in @player_classes %>
    <tr>
      <td><%= player_class.name %></td>
      <td><%= link_to "Show", player_class %></td>
      <td><%= link_to "Edit", edit_player_class_path(player_class) %></td>
      <td><%= link_to "Destroy", player_class, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Player Class", new_player_class_path(player_class) %></p>
